{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <h1>{{view_name}}</h1>
  <a href="{{ request.route_url('panel_object', type=otype , slug='new')}}"><h2>Create new item</h2></a>
  <div class="row">
  <div class="col-md-6 center">
  {% if paginator.items %}
    
       <table>
       <tr>
            <td><b>Command</b></td>
            {% if paginator.items[0].text %}
            <td><b>Text</b></td>
            {% endif %}
            {% if paginator.items[0].view %}
            <td><b>View</b></td>
            {% endif %}
            {% if paginator.items[0].active %}
            <td><b>Active</b></td>
            {% endif %}
       </tr>
            {% for entry in paginator.items %}
       <tr>
        <td>
           <a href="{{ request.route_url('panel_object', type=otype , slug=entry.cmd)}}">
           {{ entry.cmd }}
           </a>
        </td>
        
        {% if entry.text %}
        <td>
           {{ entry.text }}
        </td>
        {% endif %}
        {% if entry.view %}
        <td>
           {{ entry.view }}
        </td>
        {% endif %}
        {% if entry.active %}
        <td>
           {{ entry.active }}
        </td>
        {% endif %}
        </tr>
            {% endfor %}
        </tr>
       
       
       
        </table>
        {{ paginator.pager() |safe }}

    {% else %}

        <p>No entries found.</p>

    {% endif %}
    </div></div>
</div>
{% endblock content %}
