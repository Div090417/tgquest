{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
    <h1>{{ info }}</h1>
    
  {% if request.authenticated_userid %}
        Welcome <strong>{{request.authenticated_userid}}</strong> ::
        <a href="{{request.route_url('panel_auth_out')}}">Sign Out</a>
    
    {% else %}
        
        <form action="{{request.route_url('panel_auth_form')}}" method="post" class="form-inline">
            {% for field in form %}
            {% for error in field.errors %}
            <div class="error">{{ error }}</div>
            {% endfor %}
            
            <div class="form-group">
            <label for="title">{{ field.label }}</label>
            {{ field(class_='form-control') }}
            </div>
        {% endfor %}
        
        <div class="form-group">
            <label></label>
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
        
        </form>
    {% endif %}

</div>
{% endblock content %}
